# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# General
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# R
[*.{R,r}]
indent_style = space
indent_size = 2

# C, C++
[*.{c,cpp,h,hpp,ipp,tpp}]
indent_style = space
indent_size = 4

# Markdown, Rmarkdown, quarto files
[*.{R,r,q,}md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# yaml config files
[*.y{a,}ml]
indent_style = space
indent_size = 2

# Debian control files
[{*.dcf,DESCRIPTION}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = unset
insert_final_newline = unset

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Unset for auto-generated files and .clang_format
[{.clang_format,NAMESPACE,*/RcppExports.{R,cpp},man/**}]
trim_trailing_whitespace = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset
